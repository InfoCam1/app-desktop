<UserControl x:Class="InfoCam.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <wpf:WebView2 Grid.Column="0" x:Name="MapBrowser"/>

        <!-- Side Filter Panel (Fixed Airspace Issue) -->
        <Border Grid.Column="1" VerticalAlignment="Stretch" MinWidth="200"
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="#444444" BorderThickness="1,0,0,0" Padding="15">
            <StackPanel>
                <TextBlock Text="Filtros del Mapa" Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                
                <CheckBox x:Name="FilterCameras" Content="Cámaras" IsChecked="True" 
                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"
                          Checked="Filter_Checked" Unchecked="Filter_Unchecked"/>
                
                <CheckBox x:Name="FilterIncidenciasMovil" Content="Incidencias (Móvil)" IsChecked="True" 
                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"
                          Checked="Filter_Checked" Unchecked="Filter_Unchecked"/>
                
                <CheckBox x:Name="FilterIncidenciasTrafico" Content="Incidencias (Tráfico)" IsChecked="True" 
                          Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"
                          Checked="Filter_Checked" Unchecked="Filter_Unchecked"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
